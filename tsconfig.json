{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node16",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "paths": {
      "@util": [
        "./src/util/"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
